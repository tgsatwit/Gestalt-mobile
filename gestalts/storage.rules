rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function for authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImageFile() {
      return request.resource != null &&
             request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // Users can access their own files under user-specific namespaces
    match /users/{userId}/{allPaths=**} {
      allow read, write, create, delete: if isOwner(userId);
    }

    // New avatar upload paths used by mobile app (REST streaming)
    match /avatars/profiles/{userId}/{childProfileId}/{fileName} {
      allow read: if true; // avatars are public to read
      allow write, create, delete: if isOwner(userId) && isValidImageFile();
    }

    match /avatars/characters/{userId}/{characterId}/{fileName} {
      allow read: if true;
      allow write, create, delete: if isOwner(userId) && isValidImageFile();
    }

    match /avatars/temp/{userId}/{fileName} {
      allow read: if true;
      allow write, create, delete: if isOwner(userId) && isValidImageFile();
    }

    // Backward-compatible legacy paths still in use
    match /users/{userId}/avatars/{fileName} {
      allow read: if true;
      allow write, create, delete: if isOwner(userId) && isValidImageFile();
    }

    match /users/{userId}/stories/{storyId}/{fileName} {
      allow read: if true;
      allow write, create, delete: if isOwner(userId) && isValidImageFile();
    }
    
    // Support legacy/fallback paths for story images
    match /storyImages/{userId}/{storyId}/{fileName} {
      allow read, write, create, delete: if isOwner(userId);
    }
    
    // Support story page images with nested structure
    match /{storyPath}/{fileName} {
      allow read: if storyPath.matches('story_.*_page_.*');
      allow write, create, delete: if isAuthenticated() && isValidImageFile() && storyPath.matches('story_.*_page_.*');
    }
    
    // Support character avatars in different path structure
    match /characterAvatars/{userId}/{fileName} {
      allow read: if true;
      allow write, create, delete: if isOwner(userId) && isValidImageFile();
    }
    
    // Public assets (if needed for app functionality)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write, create, delete: if false; // Only admins can write to public
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write, create, delete: if false;
    }
  }
}